/* pages/species/species.wxss */
page{
  background:rgb(235,235,235);
}
.main{
  width: 100%;
  height: 100vh;
  display: flex;
}
.main-left{
  width: 20%;
  height: 100vh;
  border-right: 1px solid rgb(235,235,235);
  display: flex;
  flex-direction: column;
  background: rgb(255,255,255);
  font-size: 36rpx;
  position: fixed;
  top: 0;
  border-right: 1rpx solid #999;
}
.main-left>view{
  text-align: center;
  /* line-height: 16.7vh; */
  font-size: 30rpx;
  line-height: 80rpx;
}
.main-right{
  width: 80%;
  position: absolute;
  right: 0;
}
.right-shoper{
  width: 99%;
  margin: auto;
  display: flex;
  align-items: center;
  background: rgb(255,255,255);
  border-bottom: 1rpx solid #999;
  height: 200rpx;
}
.right-shoper>image{
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
}
.right-main{
  height: 150rpx;
}
.right-title{
  font-size: 28rpx;
  font-weight: 700;
  margin:20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.right-produce{
  font-size: 25rpx;
  color:#999;
  margin:20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.right-price{
  color: red;
  font-size: 30rpx;
  margin: 20rpx;
}
.right-price>text{
  font-size: 24rpx;
}
.showon{
  color: #FF4001;
}