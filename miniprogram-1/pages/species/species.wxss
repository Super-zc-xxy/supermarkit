/* pages/species/species.wxss */
page{
  background:rgb(235,235,235);
}
.main{
  width: 100%;
  height: 100vh;
  display: flex;
}
.main-left{
  width: 25%;
  border-right: 1px solid rgb(235,235,235);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background: rgb(255,255,255);
  font-size: 36rpx;
  position: fixed;
  top: 0;
}
.main-left>view{
  text-align: center;
  line-height: 16.7vh;
}
.main-right{
  width: 75%;
  position: absolute;
  right: 0;
}
.right-shoper{
  width: 96%;
  margin: auto;
  margin-bottom: 20rpx;
  margin-top: 5rpx;
  height: 250rpx;
  display: flex;
  align-items: center;
  background: rgb(255,255,255);
  border-radius: 20rpx;
}
.right-shoper>image{
  width: 200rpx;
  height: 200rpx;
}
.right-main{
  height: 200rpx;
}
.right-title{
  font-size: 40rpx;
  font-weight: 700;
  margin:20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.right-produce{
  font-size: 25rpx;
  color:#999;
  margin:20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  
}
.right-price{
  color: red;
  font-size: 40rpx;
}
.right-price>text{
  font-size: 30rpx;
}
.showon{
  color: #FF4001;
}