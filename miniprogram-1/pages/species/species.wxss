/* pages/species/species.wxss */
page{
  background:rgb(235,235,235);
}
.main{
  width: 100%;
  height: 100vh;
  display: flex;
}
.main-left{
  width: 20%;
  height: 100vh;
  border-right: 1px solid rgba(243,243,243,0.2);
  display: flex;
  flex-direction: column;
  background: rgb(243,243,243);
  font-size: 36rpx;
  position: fixed;
  top: 0;
}
.main-left>view{
  text-align: center;
  /* line-height: 16.7vh; */
  font-size: 30rpx;
  line-height: 80rpx;
}
.main-right{
  width: 80%;
  position: absolute;
  right: 0;
}
.right-shoper{
  width: 99%;
  margin: auto;
  display: flex;
  align-items: center;
  background: rgb(255,255,255);
  border-bottom: 1rpx solid rgba(243,243,243,0.5);
  height: 200rpx;
}
.right-shoper>image{
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
}
.right-main{
  height: 150rpx;
  width: 400rpx;
  position: relative;
}
.right-title{
  font-size: 28rpx;
  /* margin:20rpx; */
  font-weight: 500;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  margin-left: 30rpx;
}
.right-produce{
  font-size: 20rpx;
  color:#999;
  /* margin:10rpx  0 0 20rpx; */
  text-overflow: ellipsis;
  margin-left: 30rpx;
  white-space: nowrap;
  overflow: hidden;
}
.right-price{
  color: red;
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.right-price>text{
  font-size: 24rpx;
}
.showon{
  color: #FF4001;
  transform: scale(1.1);
}
.newinfo4{
  color: lightblue;
  position: absolute;
  bottom: 0;
  right: 0;
  border: lightblue 1px solid;
  padding: 4rpx;
  font-size: 14rpx;
}
.newinfo5{
  color: red;
  position: absolute;
  bottom: 0;
  right: 80rpx;
  border: red 1px solid;
  padding: 4rpx;
  font-size: 14rpx;
}