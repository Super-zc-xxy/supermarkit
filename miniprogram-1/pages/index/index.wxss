/* pages/index/index.wxss */
page{
  background:rgb(245,246,247);
}
.header{
  width: 100%;
  height: 253rpx;
  display: flex;
  align-items: center;
  background:#FF3030;
}
.header> image{
  width: 50rpx;
  height: 50rpx;
  margin-left: 40rpx;
  border-radius: 40%;
  margin-right: 50rpx;
}
.input-box-r{
  border:1px solid white;
  height: 50rpx;
  width: 380rpx;
  border-radius: 25rpx;
  background:white;
  font-size: 20rpx;
  display: flex;
  align-items: center;
}
.input-box-r> input{
  height: 25rpx;
  width: 300rpx;
  margin-left: 10rpx;
}
.input-img{
  margin-left: 20rpx;
}
.swiper{
  width: 94%;
  height: 200rpx;
  border-radius: 10rpx;
  background:white;
  margin: 0 auto;
  position: relative;
  top: -50rpx;
}
.swiper swiper{
  height: 100%;
}
.swiper swiper-item{
  display: flex;
  justify-content: center;
}
.swiper swiper-item image{
  /* width: 200rpx;
  height: 200rpx; */
  width: 100%;
  height: 100%;
}
.baozhang{
  width: 94%;
  margin: -30rpx auto 20rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: red;
  position: relative;
  font-size: 28rpx;
}
.baozhang>text text{
  margin-right: 10rpx;
}
.shop{
  width: 94%;
  background:white;
  margin:0 auto;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  /* height: 200rpx; */
}
.shop>view{
  width: 20%;
  height: 50%;
  text-align: center;
  margin:10rpx 0;
}
.shop>view:hover{
  color: red;
}
.shop>view>text{
  margin:10rpx 0;
}
.shopimg{
  font-size: 50rpx;
  display: block;
}
.shop-text{
  font-size: 26rpx;
}
.baokuan{
  width: 94%;
  margin:40rpx auto;
  background:white;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}
.bk-mr{
  margin:20rpx 0 20rpx 20rpx;
}
.bk-title{
  font-size: 40rpx;
  font-weight: 700;
  position: relative;
}
.bk-title text:nth-of-type(1){
  font-size: 25rpx;
  margin: 0 20rpx;
  font-weight: normal;
  color: red;
  position: relative;
}
.bk-title text:nth-of-type(2){
  font-size: 25rpx;
  margin-left: 214rpx;
  color:#999;
  width: 100%;
  position: relative;
}
.bk-shop{
  width: 100%;
}
.bk-shop>view{
  width: 30%;
  margin: 5% 1.5%;
  position: relative;
  float: left;
}
.bk-shop>view>image{
  width: 100%;
  height: 200rpx;
  margin:20rpx 0;
}
.bk-1{
  position: absolute;
  top: 0;
  left: 10rpx;
  z-index: 99;
  font-size: 40rpx;
  color: red;
}
.bk-2{
  position: absolute;
  top: 0;
  left: 10rpx;
  z-index: 99;
  font-size: 40rpx;
  color: gold;
}
.bk-3{
  position: absolute;
  top: 0;
  left: 10rpx;
  z-index: 99;
  font-size: 40rpx;
  color: #999;
}
.bk-text{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin: 10rpx 20rpx;
  font-size: 28rpx;
}
.bk-text1{
  font-size: 18rpx;
  color: #999;
}
.xinping{
  width: 94%;
  margin:10rpx auto;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}
.xp-title{
  display: flex;
  font-size: 40rpx;
  font-weight: 700;
  align-items: flex-end;
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.xp-title1{
  font-size: 25rpx;
  color:rgb(0, 168, 14);
  font-weight: normal;
  margin-left: 20rpx;
}
.xp-title2{
  font-size: 25rpx;
  font-weight: normal;
  color: #999;
  margin-left: 210rpx;
}
.xp-shop{
  display: flex;
  flex-wrap: wrap;
}
.xp-shop>view{
  width: 30%;
  margin:5% 1.6%;
}
.xp-shop>view>image{
  background-color: #F5F6F7;
  height: 200rpx;
  width: 100%;
}
.r-textbox{
  padding:  0 36rpx;
  font-size: 36rpx;
}
.r-textbox-outbox{
  width: 700rpx;
  margin: auto;
  overflow: scroll;
  height: 90rpx;
  display: flex;
  white-space: nowrap;
  
}
.all{
  width: 94%;
  margin:40rpx auto;
  display: flex;
  justify-content: space-around;
  text-align: center;
  position: relative;

}
.all-p{
  font-size: 24rpx;
}
.all-shop{
  width: 100%;
  position: absolute;
  left: 0;
  margin-top: 100rpx;
  display: flex;
  flex-wrap: wrap;
}
.all-shop-main{
  width: 46%;
  margin:1.5%;
  border-radius: 30rpx;
  background: white;
}
.r-img-box{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f6f786;
}
.r-img-box>image{
  width: 200rpx;
  height: 200rpx;
}
.all-shop-main-p{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  /* -webkit-box-orient: vertical; */
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  /* text-align: center; */
  width: 90%;
  margin: auto;
  margin-left: 10rpx;
  font-weight: 500;
  line-height: 50rpx;
}
.all-shop-main-p1{
  color: red;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  display: flex;
}
.r-main-p{
  color: #999;
  font-size: 22rpx;
}
.all-shop-main-p2{
  width: 100%;
  margin:50rpx auto;
}
.input-box-r1{
  margin-top: 95rpx;
  width: 70%;
  background-color: #F5F6F7;
  margin-left: 20rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.input-box-r1>input{
  width: 450rpx;
}
.fixed-input{
  background-color: #fff;
  width: 100%;
  position: fixed;
  top: 0;
  height: 170rpx;
  z-index: 99;
  display: none;
}
.fixedinput{
  display: block;
}
.r-textbox-outbox-1{
  position: fixed;
  top: 170rpx;
  /* background-color: black; */
  background-color: #fff;
  border-bottom: 1rpx solid #99999920;
  width: 100%;
  align-items: center;
  font-weight: 700;
  text-align: center;
  display: none;
}
.r-textbox-outbox-2{
  display: flex;
}
.r-outline{
  width: 40rpx;
  margin: auto;
  margin-top: 10rpx;
  border-bottom: 5rpx solid transparent;
}
.r-outline-on{
  border-color:  #FF3030;
  color: #FF3030;
}
