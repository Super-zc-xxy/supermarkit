/* pages/search/search.wxss */
.search{
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background:rgb(243, 243, 243);
}
.icon{
  width: 50rpx;
  height: 50rpx;
  font-size: 50rpx;
  color: #999;
}
.search-input{
  width: 85%;
  height: 100%;
  display: flex;
  align-items: center;
  border-radius: 60rpx;
  background: white;
}
.search-input>input{
  width: 100%;
  margin-left: 10rpx;
  font-size: 30rpx;
}
.search_button{
  margin-right: 30rpx;
  font-size: 30rpx;
}
.search_info{
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
}
.shopinfo{
  padding:20rpx;
  display: flex;
  border-bottom: 1px solid rgb(243, 243, 243);
}
.shopinfo>image{
  width: 100rpx;
  height: 100rpx;
}
.info{
  margin-left: 50rpx;
  font-weight: 700;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.price{
  color: red;
  font-weight: normal;
  
}