/* pages/species/species.wxss */
page{
  background:rgb(235,235,235);
}
.main{
  width: 100%;
  height: 100vh;
  display: flex;
}
.main-left{
  width: 25%;
  border-right: 1px solid rgb(235,235,235);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background: rgb(255,255,255);
}
.main-left>view{
  text-align: center;
  padding: 20rpx 0;
}
.main-right{
  width: 100%;
}
.right-shoper{
  width: 100%;
  margin:20rpx 0 ;
  height: 250rpx;
  display: flex;
  align-items: center;
  background: rgb(255,255,255);
}
.right-shoper>image{
  width: 200rpx;
  height: 200rpx;
}
.right-main{
  height: 200rpx;
  width: 400rpx;
}
.right-title{
  font-size: 40rpx;
  font-weight: 700;
  margin:20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.right-produce{
  font-size: 25rpx;
  color:#999;
  margin:20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  
}
.right-price{
  color: red;
  font-size: 40rpx;
}
.right-price>text{
  font-size: 30rpx;
}