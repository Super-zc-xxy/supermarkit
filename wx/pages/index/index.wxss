/* pages/index/index.wxss */
page{
  background:rgb(245,246,247);
}
.header{
  width: 100%;
  height: 250rpx;
  display: flex;
  align-items: center;
  background:#FF3030;
}
.header> image{
  width: 50rpx;
  height: 50rpx;
  margin-left: 40rpx;
  border-radius: 40%;
  margin-right: 50rpx;
}
.header> input{
  border:1px solid white;
  height: 25rpx;
  width: 360rpx;
  border-radius: 25rpx;
  background:white;
  font-size: 25rpx;
  text-indent: 1em;
}
.swiper{
  width: 80%;
  height: 200rpx;
  border-radius: 10rpx;
  background:white;
  margin: 0 auto;
  position: relative;
  top: -50rpx;
}
.swiper swiper{
  height: 100%;
}
.swiper swiper-item{
  display: flex;
  justify-content: center;
}
.swiper swiper-item image{
  width: 200rpx;
  height: 200rpx;
}
.baozhang{
  width: 80%;
  margin: -30rpx auto 20rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: red;
  position: relative;
}
.baozhang>text text{
  margin-right: 10rpx;
}
.shop{
  width: 80%;
  background:white;
  margin:0 auto;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.shop>view{
  width: 33.3%;
  height: 50%;
  text-align: center;
  margin:20rpx 0;
}
.shop>view:hover{
  color: red;
}
.shop>view>text{
  margin:20rpx 0;
}
.shopimg{
  font-size: 90rpx;
  display: block;
}
.baokuan{
  width: 80%;
  margin:40rpx auto;
  background:white;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}
.bk-mr{
  margin:20rpx 0 20rpx 20rpx;
}
.bk-title{
  font-size: 40rpx;
  font-weight: 700;
  position: relative;
}
.bk-title text:nth-of-type(1){
  font-size: 25rpx;
  margin: 0 10rpx;
  font-weight: normal;
  color: red;
  position: relative;
}
.bk-title text:nth-of-type(2){
  font-size: 25rpx;
  margin-left: 155rpx;
  color:#999;
  width: 100%;
  position: relative;
}
.bk-shop{
  width: 100%;
  display: flex;
}
.bk-shop>view{
  width: 30%;
  margin: 5% 1.5%;
  position: relative;
}
.bk-shop>view>image{
  width: 100%;
  height: 200rpx;
  margin:20rpx 0;
}
.bk-1{
  position: absolute;
  top: 0;
  left: 10rpx;
  z-index: 99;
  font-size: 40rpx;
  color: red;
}
.bk-2{
  position: absolute;
  top: 0;
  left: 10rpx;
  z-index: 99;
  font-size: 40rpx;
  color: gold;
}
.bk-3{
  position: absolute;
  top: 0;
  left: 10rpx;
  z-index: 99;
  font-size: 40rpx;
  color: #999;
}
.bk-text{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-weight: 700;
}
.bk-text1{
  font-size: 20rpx;
  color: #999;
}
.xinping{
  width: 80%;
  margin:10rpx auto;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}
.xp-title{
  display: flex;
  font-size: 40rpx;
  font-weight: 700;
  align-items: flex-end;
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.xp-title1{
  font-size: 25rpx;
  color:rgb(0, 168, 14);
  font-weight: normal;
  margin-left: 20rpx;
}
.xp-title2{
  font-size: 25rpx;
  font-weight: normal;
  color: #999;
  margin-left: 125rpx;
}
.xp-shop{
  display: flex;
  flex-wrap: wrap;
}
.xp-shop>view{
  width: 30%;
  margin:5% 1.5%;
}
.xp-shop>view>image{
  height: 200rpx;
  width: 100%;
}
.all{
  width: 90%;
  margin:40rpx auto;
  display: flex;
  justify-content: space-around;
  text-align: center;
  position: relative;
}
.all-p{
  font-size: 20rpx;
}
.all-shop{
  width: 100%;
  position: absolute;
  left: 0;
  margin-top: 50rpx;
  display: flex;
  flex-wrap: wrap;
}
.all-shop-main{
  width: 48%;
  margin:.5%;
  border: 1px solid rgb(244,244,244);
  box-shadow: 2px 2px 5px black;
}
.all-shop-main>image{
  width: 100%;
  height: 200rpx;
}
.all-shop-main-p{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 30rpx;
  font-weight: 700;
}
.all-shop-main-p1{
  text-align: left;
  font-weight: 700;
  color: red;
}
.all-shop-main-p2{
  width: 100%;
  margin:50rpx auto;
}